@{
    Layout = "_Root";
}

<div id="content" class="center-1">
    <div class="content-page bg-color-grey">
        @if (IsSectionDefined("Breadcrumb"))
        {
            @section Breadcrumb {
                @RenderSection("Breadcrumb")
            }
        }
        <div class="container">
            <div class="row">
                
                    @RenderBody()
                    @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.MainColumnAfter })

               
            </div>
        </div>
    </div>
</div>