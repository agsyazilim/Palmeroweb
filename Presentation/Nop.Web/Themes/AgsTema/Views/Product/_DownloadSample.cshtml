@model ProductDetailsModel
@if (Model.HasSampleDownload)
{
    <div class="download-sample">
        <a class="button-2 download-sample-button" href="@Url.RouteUrl("GetSampleDownload", new {productid = Model.Id})">
            <span>
                @T("Products.DownloadSample")
            </span>
           
        </a>
    </div>
}